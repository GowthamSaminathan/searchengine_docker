{
  "updateProcessor":{},
  "searchComponent":{
    "webr_suggest":{
      "name":"webr_suggest",
      "class":"solr.SuggestComponent",
      "suggester":[
        {
          "name":"body_suggest",
          "lookupImpl":"AnalyzingInfixLookupFactory",
          "dictionaryImpl":"DocumentDictionaryFactory",
          "field":"body",
          "suggestAnalyzerFieldType":"text_general",
          "buildOnStartup":"false",
          "allTermsRequired":"false"},
        {
          "name":"title_suggest",
          "lookupImpl":"AnalyzingInfixLookupFactory",
          "dictionaryImpl":"DocumentDictionaryFactory",
          "field":"title",
          "suggestAnalyzerFieldType":"text_general",
          "buildOnStartup":"false",
          "allTermsRequired":"false"}]},
    "webr_spellcheck":{
      "name":"webr_spellcheck",
      "class":"solr.SpellCheckComponent",
      "spellchecker":[
        {
          "name":"body_spellcheck",
          "field":"body",
          "classname":"solr.DirectSolrSpellChecker",
          "distanceMeasure":"internal",
          "accuracy":0.5,
          "maxEdits":2,
          "minPrefix":1,
          "maxInspections":5,
          "minQueryLength":4,
          "maxQueryFrequency":0.01,
          "thresholdTokenFrequency":0.01},
        {
          "name":"title_spellcheck",
          "field":"title",
          "classname":"solr.DirectSolrSpellChecker",
          "distanceMeasure":"internal",
          "accuracy":0.5,
          "maxEdits":2,
          "minPrefix":1,
          "maxInspections":5,
          "minQueryLength":4,
          "maxQueryFrequency":0.01,
          "thresholdTokenFrequency":0.01}]}},
  "requestHandler":{
    "/webr_suggest":{
      "name":"/webr_suggest",
      "startup":"lazy",
      "class":"solr.SearchHandler",
      "defaults":{
        "suggest":"true",
        "suggest.count":"10"},
      "components":["webr_suggest"]},
    "/webr_spellcheck":{
      "name":"/webr_spellcheck",
      "class":"org.apache.solr.handler.component.SearchHandler",
      "defaults":{
        "spellcheck.dictionary":[
          "body_spellcheck",
          "title_spellcheck"],
        "spellcheck.count":10},
      "last-components":["webr_spellcheck"]}}}